<html>
    <head>
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Gentium+Plus&family=Playfair+Display&display=swap"
            rel="stylesheet">
        <style>
            h1 {
                color: #363232;
                font-family: 'Gentium Plus', serif;
                font-size: 100px;
                margin-top: 3%;
                margin-bottom: 2%;
                font-weight: 100;
                text-align: center;
            }

            .search-inp {
                padding-left: 10;
                color: rgba(128, 128, 128, 1);
                font-family: 'Arial', serif;
                font-size: 15px;
                width: 80%;
                border-width: 2;
                border-color: rgba(128, 128, 128, 0.5);
            }

            .submit-inp {
                width: 20%;
                color: white;
                background-color: #363232;
                font-family: 'Arial', serif;
                font-size: 15px;
            }

            .inp-parent {
                display: flex;
                margin-left: auto;
                margin-right: auto;
                width: 37%;
                height: 45;
                gap: 20px;
            }

            .news-row {
                display: flex;
                margin-left: auto;
                margin-right: auto;
                width: 41%;
                height: 45;
                gap: 20px;
                margin-top: 20px;
                margin-bottom: 110px;
            }

            p {
                border-style: solid;
                padding-left: 15px;
                padding-top: 10px;
                padding-bottom: 100px;
                font-family: 'Playfair Display', serif;
                font-weight: 500;
                font-size: 20px;
                border-width: 2;
                width: 50%;
            }

            p:hover {
                cursor: pointer;
            }
        </style>
    </head>
    <body>
        <h1>The News</h1>
        <div class="inp-parent">
            <input type="text" class="search-inp" placeholder="Enter Keywords" id="inp-box" value="<%= val %>">
            <button class="submit-inp" onclick="submit()">Submit</button>
        </div>
        <% for (var i=0; i < headlines.length; i+=2) { %>
            <div class="news-row">
                <p id="news" onclick="openLink('<%= headlines[i][`url`] %>')">
                    <%= headlines[i]["title"] %>
                </p>
                <% if (headlines.length> i+1) { %>
                    <p id="news" onclick="openLink('<%= headlines[i+1][`url`] %>')">
                        <%= headlines[i+1]["title"] %>
                    </p>
                <% } else {%>
                    <p id="empty"> </p>
                <% }%>
            </div>
        <% } %>

        <script>
            document.getElementById("empty").style.borderWidth = 0;
            function openLink(link) {
                window.open(link);
                console.log(link);
            }

            function submit() {
                window.location.replace(`/?search=${document.getElementById("inp-box").value}`)
            }
        </script>
    </body>
</html>